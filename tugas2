#include <stdio.h>
#include <conio.h>
main()
{
float hasil;
int a, b, c;
char back;
printf("\t\t\tProses operasi hitung\n\n");
ulang :
printf("masukkan angka pertama\n");
printf("masukkan angka kedua\n");
printf("kemudian pilih operasi hitung yang diinginkan \n");
printf("1. penjumlahan\n");
printf("2. pengurangan\n");
printf("3. perkalian\n");
printf("4. pembagian\n");
scanf("%d", &a);
scanf("%d", &b);
scanf("%d", &c);
    switch(c)
    {
    case 1:
    hasil=a+b;
    printf("a+b : %.2f penjumlahan\n", hasil);
    break;
    case 2:
    hasil=a-b;
    printf("a-b : %.2f pengurangan\n", hasil);
    break;
    case 3:
    hasil=a*b;
    printf("a*b : %.2f perkalian\n", hasil);
    break;
    case 4:
    hasil=a/b;
    printf("a/b %.2f pembagian\n", hasil);
    break;
    default:
    printf("error\n");
    goto ulang;
    }
}
